                        <controls:CustomEntry 
                                    VerticalTextAlignment="Center"
                                    FontSize="14"
                                    Text="{Binding Address}"
                                    Placeholder="Enter address"
                                    PlaceholderColor="#cccccc"
                                    TextColor="Black"/>
