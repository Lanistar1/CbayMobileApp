                            FontFamily="Rubik-Regular"
                            FontSize="14"
                            Margin="0,0,0,-5"
                            TextColor="#285EA7"/>

                </StackLayout>


                <Controls:CustomEntry 
                    FontFamily="Rubik-Regular"
                    FontSize="16"
                    Text="{Binding Username}"
                    Placeholder="Abdulbaki Shuaib"
                    TextColor="Black"/>
                <Line X1="0"
                      Y1="5"
                      X2="400"
